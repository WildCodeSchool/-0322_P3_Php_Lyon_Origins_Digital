{% extends 'base.html.twig' %}

{% block title %}Galerie des Vid√©o{% endblock %}

{% set dot = "<i class='bi bi-dot m-0'></i>" %}

{% set fav = "<i class='bi fav'></i>" %}
{% set watchLater = "<i class='bi watchLater'></i>" %}
{% set like = "<i class='bi like'></i>" %}

{% block body %}

    {% set offset = 6 %}
    {% set thumb = 1 %}

    <main class="">

        <div class="text-secondary d-flex justify-content-start align-items-center">
            <span class="fs-1">{{ dot|raw }}</span>
            <h3 class="title-font m-0">Les dernieres sorties</h3>
        </div>

        <section class="d-flex justify-content-start align-items-center flex-wrap">

            {% for i in 0.. (videos|length / offset) %}
                {% for video in videos |slice(0 + i * offset, offset) %}
                    <div class="d-none {{i}}-latest">
                        {{ include('shared/big-thumbnail.html.twig', {item: video}) }}
                    </div>
                {% endfor %}
            {% endfor %}

        </section>

        <button id="load-more-latest">Voir Plus</button>
    </main>

{% endblock %}
