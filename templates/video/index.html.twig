{% extends 'base.html.twig' %}

{% block title %}Galerie Vidéo{% endblock %}


{% block body %}

    {% set offset = 6 %}

    <main class="thumbs container">
        <table class="table">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Date de publication</th>
                    <th>Poster</th>
                </tr>
            </thead>
            <tbody>
                {% for video in videos |slice(0, offset) %}
                    <tr>
                        <td>{{ video.title }}</td>
                        <td>{{ video.description }}</td>    
                        <td>{{ video.postDate|date('d/m/Y') }}</td>    
                        <td>
                            <img src="{{ asset('build/images/' ~ video.posterUrl) }}" alt="poster"></a>
                        </td>
                    </tr>
                    {% else %}
                        
                        <p>Il n'y a pas de vidéos</p>
                    
                    {% endfor %}
                
            </tbody>
        </table>

        <button id="load-more-button">Load More</button>

    </main>

{% endblock %}
