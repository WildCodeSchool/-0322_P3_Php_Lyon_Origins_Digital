    {% set playFill = "<i class='bi bi-play-fill'></i>" %}

{% block title %}Gaming Gurus{% endblock %}

{% block body %}
    <div class="home-container container-fluid row">
       
        <div class="col-lg-1 d-lg-block d-none">
			{% include "shared/navbar-desktop.html.twig" %}
		</div>
             
            <div class="home-header text-center col-lg-11">
                <div class="home-title text-secondary title-font d-flex d-lg-none justify-content-center align-items-start">
