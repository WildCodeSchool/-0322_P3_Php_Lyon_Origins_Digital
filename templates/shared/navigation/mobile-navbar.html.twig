<div id="nav-group-mb" class="bg-secondary rounded-top-5 d-flex justify-content-around overflow-hidden align-items-center mt-5">

	{% for navItem in navItems %}
		{% if navItem['name'] == 'show' %}
			<div class="h-100">
			{% else %}
				<a class="h-100" href="{{ path(navItem['link']) }}">
				{% endif %}

				<div class="nav-item text-primary text-center d-flex justify-content-center align-items-center" aria-selected="false" id="nav-btn-{{ navItem['name'] }}-mb" aria-controls="{{ navItem['name'] }}">

					<i class="bi bi-{{ navItem['iconClass'] }}" id="{{ navItem['iconClass'] }}"></i>

				</div>
				{% if navItem['name'] == 'show' %}
				</div>
		{% else %}
			</a>
		{% endif %}

	{% endfor %}

</div>
