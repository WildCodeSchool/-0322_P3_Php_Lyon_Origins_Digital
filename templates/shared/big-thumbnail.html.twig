{% extends 'base.html.twig' %}

{% set dot = "<i class='bi bi-dot fs-2'></i>" %}

{% block body %}

<pre>
    {{ dump(video) }}
</pre>

<div class="bg-dark container-fluid">

    <div class="bt bg-primary rounded-4 p-3 position-relative">
        <div class="bt-poster rounded-4 position-absolute top-0 start-0 translate-middle"></div>

        <div class="bt-title text-secondary fs-2">TITRE</div>
    
        <div class="bt-stats d-flex justify-content-start align-items-center text-info fs-6">
            <span class="bt-views">2.2k vues</span>
            <span>{{dot|raw}}</span>
            <span class="bt-category">#CAT</span>
            <span>{{dot|raw}}</span>
            <span class="bt-post-date">Il y a 10 min</span>
        </div>

        <div class="bt-creator text-info">CREATEUR</div>
        <div class="bt-line d-block"></div>

        <div class="bt-description text-info">Lorem ipsum, dolor sit amet consectetur adipisicing elit.</div>
    </div>
    
</div>

<img src="{{ asset('build/images/' ~ video.poster_url) }}" alt="">
{{ "http://#{app.request.host}" }}

{% endblock %}